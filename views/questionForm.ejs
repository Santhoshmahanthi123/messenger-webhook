<% include partials/header %>
<div class="text-center">
  <div style="background:rgb(202, 121, 15)!important" class="jumbotron">
    <h1>Please Post Questions here</h1>
    <div class="container">
      <form method="POST" action="/question">
        <div class="form-group">
          <label for="formGroupExampleInput">Please enter your question here: *Note: max 3 questions are
            permitted</label>
          <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Enter question"
            name="question" />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-success">
            Submit question
          </button>
        </div>
      </form>
      <div style="width:inherit align-self- auto;" class="container">
        <hr class="my-4" />
        <h3>Questions table</h3>
        <ul class="list-group">
          <% questions.forEach(function(question){ %>
          <li class="list-group-item" id="ldata"><%=question._id%></li>
          <li class="list-group-item" id="ldata"><%=question.question%></li>
          <% }); %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %>