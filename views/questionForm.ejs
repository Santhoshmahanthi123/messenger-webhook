<% include partials/header %>
<div class="text-center">
  <div style="background:rgb(202, 121, 15)!important" class="jumbotron">
    <h1>Please Post Questions here</h1>
    <div class="container">
      <form method="POST" action="/question">
        <div class="form-group">
          <label for="formGroupExampleInput">Please enter your question here: *Note: max 3 questions are
            permitted</label>
          <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Enter question"
            name="question" />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-success">
            Submit question
          </button>
        </div>
        <hr class="my-4" />
      </form>
      <div style="width:inherit align-self- auto;" class="container">
        <div class="text-center">
          Please click the button to see question Ids and questions:
          <button type="submit" id="btn" class="btn btn-primary">
            Get questions
          </button>
        </div>
        <hr class="my-4" />
        <table id="question" border="1" class="table table-striped table-bordered table-hover">
          <h3>Questions table</h3>
          <thead>
            <tr>
              <th>Id</th>
              <th>Question</th>
            </tr>
          </thead>

          <tbody id="tdata">

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %>