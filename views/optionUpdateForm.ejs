<% include partials/header %>
<div class="text-center">
  <div style="background:rgb(202, 121, 15) !important" class="jumbotron">
    <h1>Please update your options here</h1>
    <div class="container">
      <form method="PUT" action="/optionUpdate">
        <div class="form-group">
          
          
          <center>
              <label for="formGroupExampleInput"
              >Please enter your optionId here:</label>
          <input
            type="text"
            class="form-control"
            style="width:auto"
            id="optionId"
            name="optionId"
            placeholder="Enter your optionId"
          />
          <label for="formGroupExampleInput"
              >Please enter your option here:</label>
          <input
            type="text"
            class="form-control"
            style="width:auto"
            id="option"
            name="option"
            placeholder="Enter your option"
          />
         
        </center>
        </div>
        <div>
          <button type="submit" class="btn btn-success">Submit type</button>
        </div>
        <hr class="my-4" />
      </form>
      <div style="width:inherit align-self- auto;" class="container">
        
        <div class="text-center">
          Please click the button to see option Ids and options:
          <button type="submit" id="btn_1" class="btn btn-primary">
            Get options
          </button>
        </div>
        <hr class="my-4" />
        <table
          id="option"
          border="1"
          class="table table-striped table-bordered table-hover"
        >
        <h3>Options table</h3>
        <thead>
          <tr>
            <th>OptionId</th>
            <th>Options</th>
            <th>QuestionId</th>
          </tr>
        </thead>
          <tbody id="topt">
            
          </tbody>
        </table>
      </div>
    </div>
    </div>
  </div>
</div>

<% include partials/footer %>
