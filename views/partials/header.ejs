  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
  <script>
    $(document).ready(() => {
      $("#btn").click(() => {
        $.get(
          "https://messenger-webchat.herokuapp.com/question",
          (data, status) => {
            console.log(data);
            data.questions.forEach(dt => {
              $("#tdata").append(
                "<tr>" +
                "<td>" +
                dt._id +
                "</td>" +
                "<td>" +
                dt.question +
                "</td>" +
                "</tr>"
              );
            });
          }
        );
      });
      $("#btn_1").click(() => {
        $.get(
          "https://messenger-webchat.herokuapp.com/option",
          (data, status) => {
            console.log(data);
            data.options.forEach(dt => {
              $("#topt").append(
                "<tr>" +
                "<td>" +
                dt._id +
                "</td>" +
                "<td>" +
                dt.options +
                "</td>" +
                "<td>" +
                dt.questionId +
                "</td>" +
                "</tr>"
              );
            });
          }
        );
      });
      $("#btn_2").click(() => {
        $.get(
          "https://messenger-webchat.herokuapp.com/type",
          (data, status) => {
            console.log(data);
            data.Types.forEach(dt => {
              $("#ttype").append(
                "<tr>" +
                "<td>" +
                dt._id +
                "</td>" +
                "<td>" +
                dt.types +
                "</td>" +
                "<td>" +
                dt.optionId +
                "</td>" +
                "<td>" +
                dt.optionId +
                "</td>" +
                "</tr>"
              );
            });
          }
        );
      });

      // process the form
      $("#ajax-form").submit(function (event) {
        event.preventDefault();
        data = {
          optionId: document.getElementById("optionId").value,
          option: document.getElementById("option").value
          //add other properties similarly
        };
        console.log(data.optionId, data.option);
        $.ajax({
          type: "PATCH",
          url: "https://messenger-webchat.herokuapp.com/optionUpdate",
          data: data
        });
      });
      $("#ajax-form-user").submit(function (event) {
        event.preventDefault();
        data = {
          userId: document.getElementById("userId").value,
          name: document.getElementById("name").value,
          email: document.getElementById("email").value,
          mobile: document.getElementById("mobile").value,
        };
        console.log(data.userId);
        $.ajax({
          type: "PATCH",
          url: "https://messenger-webchat.herokuapp.com/userUpdate",
          data: data
        });
      });
    });
    window.onscroll = function () {
      myFunction();
    };
    var navbar = document.getElementById("navbar");
    var sticky = navbar.offsetTop;

    function myFunction() {
      if (window.pageYOffset >= sticky) {
        navbar.classList.add("sticky");
      } else {
        navbar.classList.remove("sticky");
      }
    }
  </script>